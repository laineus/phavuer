{
  "name": "phavuer",
  "version": "0.17.1",
  "description": "A wrapper library that integrates Phaser 3 with Vue 3.",
  "author": "Laineus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/laineus/phavuer.git"
  },
  "exports": {
    ".": {
      "types": "./types/phavuer.d.ts",
      "import": "./dist/phavuer.es.js",
      "require": "./dist/phavuer.umd.js"
    }
  },
  "main": "dist/phavuer.umd.js",
  "module": "dist/phavuer.es.js",
  "types": "types/phavuer.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest"
  },
  "files": [
    "dist",
    "src",
    "types"
  ],
  "dependencies": {
    "phaser": "^3.70.0",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.33.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.0",
    "vitest": "^1.3.0",
    "vue-tsc": "^3.0.5",
    "webdriverio": "^8.32.2"
  }
}
